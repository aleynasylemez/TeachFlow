@model IEnumerable<CourseRegistration>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary fw-bold">📝 Registration List</h1>
        <a asp-action="Create" class="btn btn-md btn-gradient-primary shadow-sm">➕ Create Registration</a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="bg-gradient-dark text-white">
                <tr>
                    <th style="width: 150px;">
                        <i class="bi bi-hash"></i> @Html.DisplayNameFor(m => m.RegistrationId)
                    </th>
                    <th>
                        <i class="bi bi-person"></i> @Html.DisplayNameFor(m => m.Student.StudentName)
                    </th>
                    <th>
                        <i class="bi bi-journal"></i> @Html.DisplayNameFor(m => m.Course.CourseName)
                    </th>
                    <th style="width: 200px; text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-bottom">
                        <td class="text-center">@Html.DisplayFor(modelItem => item.RegistrationId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Student.StudentName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Course.CourseName)</td>
                        <td class="text-center">
                            <!-- <a asp-controller="CourseRegistration" asp-action="Edit" asp-route-id="@item.RegistrationId"
                                class="btn btn-sm btn-primary">✏️Edit</a>-->
                            <a asp-controller="CourseRegistration" asp-action="Delete" asp-route-id="@item.RegistrationId"
                                class="btn btn-sm btn-danger">❌Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .btn-gradient-primary {
        background: linear-gradient(45deg, #1d78d2, #47b8e0);
        color: white;
        border: none;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(45deg, #1663a8, #379db6);
        color: white;
    }

    .bg-gradient-dark {
        background: linear-gradient(45deg, #343a40, #495057);
    }

    .table-striped tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>