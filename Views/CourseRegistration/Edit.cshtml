@model CourseRegistration

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="fw-bold mb-0">‚úèÔ∏è Update Course Registration</h2>
            <a href="/CourseRegistration" class="btn btn-outline-light btn-sm">Back to Registrations</a>
        </div>
        <div class="card-body">
            <form asp-controller="CourseRegistration" asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="shadow-sm mb-3"></div>
                <input type="hidden" asp-for="RegistrationId">

                <div class="mb-4">
                    <label asp-for="StudentId" class="form-label fw-bold text-primary">Student</label>
                    <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-select shadow-sm border-primary">
                        <option value="">Choose a Student</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label asp-for="CourseId" class="form-label fw-bold text-primary">Course</label>
                    <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-select shadow-sm border-primary">
                        <option value="">Choose a Course</option>
                    </select>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-gradient-primary shadow-sm px-4">üíæ Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-gradient-primary {
        background: linear-gradient(45deg, #007bff, #00c6ff);
        color: white;
        border: none;
        font-size: 1.1rem;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(45deg, #0056b3, #00a3cc);
        color: white;
    }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #1d78d2, #47b8e0);
    }

    .card {
        border-radius: 15px;
    }

    .form-select {
        padding: 10px;
        font-size: 1rem;
        border-radius: 5px;
    }
</style>
