@model Student

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-gradient-primary text-white">
            <h2 class="fw-bold mb-0">👩‍🎓 Add Student</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Student" asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="StudentName" class="form-label">Student Name</label>
                    <input asp-for="StudentName" class="form-control shadow-sm">
                </div>
                <div class="mb-3">
                    <label asp-for="StudentSurname" class="form-label">Student Surname</label>
                    <input asp-for="StudentSurname" class="form-control shadow-sm">
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control shadow-sm">
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input asp-for="Phone" class="form-control shadow-sm">
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-gradient-primary shadow-sm">💾 Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-gradient-primary {
        background: linear-gradient(45deg, #1d78d2, #47b8e0);
        color: white;
        border: none;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(45deg, #1663a8, #379db6);
        color: white;
    }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #1d78d2, #47b8e0);
    }

    .card {
        border: none;
        border-radius: 10px;
    }
</style>
