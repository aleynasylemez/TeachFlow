@model CourseViewModel

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-gradient-primary text-white">
            <h2 class="fw-bold mb-0">ðŸ“˜ Add Course</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Course" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="CourseName" class="form-label">Course Name</label>
                    <input asp-for="CourseName" class="form-control shadow-sm">
                </div>

                <div class="mb-3">
                    <label asp-for="TeacherId" class="form-label">Teacher</label>
                    <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-select shadow-sm">
                        <option value="">Choose</option>
                    </select>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-gradient-primary shadow-sm">ðŸ’¾ Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-gradient-primary {
        background: linear-gradient(45deg, #1d78d2, #47b8e0);
        color: white;
        border: none;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(45deg, #1663a8, #379db6);
        color: white;
    }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #1d78d2, #47b8e0);
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .form-select {
        padding: 10px;
        font-size: 1rem;
        border-radius: 5px;
    }
</style>