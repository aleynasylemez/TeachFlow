@model CourseViewModel

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="fw-bold mb-0">‚úèÔ∏è Update Course</h2>
            <a href="/Course" class="btn btn-outline-light btn-sm">Back to Courses</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8">
                    <form asp-controller="Course" asp-action="Edit" method="post">
                        <div asp-validation-summary="All" class="shadow-sm mb-3"></div>
                        <input type="hidden" asp-for="CourseId">

                        <div class="mb-4">
                            <label asp-for="CourseName" class="form-label fw-bold text-primary">Course Name</label>
                            <input asp-for="CourseName" class="form-control shadow-sm border-primary">
                        </div>

                        <div class="mb-4">
                            <label asp-for="TeacherId" class="form-label fw-bold text-primary">Teacher</label>
                            <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-select shadow-sm border-primary">
                                <option value="">Choose</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-gradient-primary shadow-sm px-4">üíæ Save</button>
                        </div>
                    </form>
                </div>

                <div class="col-lg-4">
                    <h4 class="fw-bold text-primary mb-3">Enrolled Students</h4>
                    <div class="list-group shadow-sm">
                        @if (Model.CourseRegistrations.Any())
                        {
                            @foreach (var item in @Model.CourseRegistrations)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.Student.NameSurname
                                    <span class="badge bg-primary rounded-pill">üìò</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item text-center text-muted">No students enrolled</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-gradient-primary {
        background: linear-gradient(45deg, #007bff, #00c6ff);
        color: white;
        border: none;
        font-size: 1.1rem;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(45deg, #0056b3, #00a3cc);
        color: white;
    }

    .bg-gradient-primary {
        background: linear-gradient(45deg, #1d78d2, #47b8e0);
    }

    .card {
        border-radius: 15px;
    }

    .list-group-item {
        background: #f9f9f9;
        border: none;
        border-radius: 10px;
        margin-bottom: 8px;
    }

    .list-group-item:last-child {
        margin-bottom: 0;
    }

    .list-group-item:hover {
        background: #e9ecef;
    }
</style>